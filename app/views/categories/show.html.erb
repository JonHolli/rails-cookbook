<%= @category.name %>
<%= link_to "add a recipe", new_category_bookmark_path(@category) %>
<%= link_to "back", categories_path %>
<ul>
  <% @category.bookmarks.each do |bookmark| %>
    <li>
      <%=bookmark.recipe.name  %>
      <img src=" <%= bookmark.recipe.img_url %> " alt="">
      <%= link_to "remove recipe", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "are you sure?"} %>
    </li>
  <% end %>

</ul>
